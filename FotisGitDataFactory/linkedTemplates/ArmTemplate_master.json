{
	"$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
	"contentVersion": "1.0.0.0",
	"parameters": {
		"factoryName": {
			"type": "string",
			"metadata": "Data Factory name",
			"defaultValue": "FotisGitDataFactory"
		},
		"AzureTableStorage1_connectionString": {
			"type": "secureString",
			"metadata": "Secure string for 'connectionString' of 'AzureTableStorage1'"
		},
		"FileServer1_password": {
			"type": "secureString",
			"metadata": "Secure string for 'password' of 'FileServer1'"
		},
		"StbTestUacRest_password": {
			"type": "secureString",
			"metadata": "Secure string for 'password' of 'StbTestUacRest'"
		},
		"UacDevopsBlobStorage_connectionString": {
			"type": "secureString",
			"metadata": "Secure string for 'connectionString' of 'UacDevopsBlobStorage'"
		},
		"FileServer1_properties_typeProperties_host": {
			"type": "string",
			"defaultValue": "C:\\Users\\fotis.drakos\\Desktop"
		},
		"FileServer1_properties_typeProperties_userId": {
			"type": "string",
			"defaultValue": "fotis.drakos"
		},
		"RestSamplesService_properties_typeProperties_url": {
			"type": "string",
			"defaultValue": "http://dummy.restapiexample.com/"
		},
		"RestService1_properties_typeProperties_url": {
			"type": "string",
			"defaultValue": "http://10.100.10.5:8080"
		},
		"StbTestUacRest_properties_typeProperties_url": {
			"type": "string",
			"defaultValue": "http://10.120.25.21:8080/opswise/"
		},
		"StbTestUacRest_properties_typeProperties_userName": {
			"type": "string",
			"defaultValue": "i.kyriazidou"
		},
		"containerUri": {
			"type": "string",
			"metadata": "URI to storage account containing linked ARM templates"
		},
		"containerSasToken": {
			"type": "string",
			"metadata": "Sas token to storage account containing linked ARM templates"
		}
	},
	"variables": {
		"factoryId": "[concat('Microsoft.DataFactory/factories/', parameters('factoryName'))]"
	},
	"resources": [
		{
			"name": "ArmTemplate_0",
			"type": "Microsoft.Resources/deployments",
			"apiVersion": "2018-02-01",
			"properties": {
				"mode": "incremental",
				"templateLink": {
					"uri": "[concat(parameters('containerUri'), '/ArmTemplate_0.json', parameters('containerSasToken'))]",
					"contentVersion": "1.0.0.0"
				},
				"parameters": {
					"factoryName": {
						"value": "[parameters('factoryName')]"
					},
					"AzureTableStorage1_connectionString": {
						"value": "[parameters('AzureTableStorage1_connectionString')]"
					},
					"FileServer1_password": {
						"value": "[parameters('FileServer1_password')]"
					},
					"StbTestUacRest_password": {
						"value": "[parameters('StbTestUacRest_password')]"
					},
					"UacDevopsBlobStorage_connectionString": {
						"value": "[parameters('UacDevopsBlobStorage_connectionString')]"
					},
					"FileServer1_properties_typeProperties_host": {
						"value": "[parameters('FileServer1_properties_typeProperties_host')]"
					},
					"FileServer1_properties_typeProperties_userId": {
						"value": "[parameters('FileServer1_properties_typeProperties_userId')]"
					},
					"RestSamplesService_properties_typeProperties_url": {
						"value": "[parameters('RestSamplesService_properties_typeProperties_url')]"
					},
					"RestService1_properties_typeProperties_url": {
						"value": "[parameters('RestService1_properties_typeProperties_url')]"
					},
					"StbTestUacRest_properties_typeProperties_url": {
						"value": "[parameters('StbTestUacRest_properties_typeProperties_url')]"
					},
					"StbTestUacRest_properties_typeProperties_userName": {
						"value": "[parameters('StbTestUacRest_properties_typeProperties_userName')]"
					}
				}
			},
			"dependsOn": []
		}
	]
}