{
	"$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
	"contentVersion": "1.0.0.0",
	"parameters": {
		"factoryName": {
			"type": "string",
			"metadata": "Data Factory name",
			"defaultValue": "devopsuacDF"
		},
		"AzureBlobStorage1_connectionString": {
			"type": "secureString",
			"metadata": "Secure string for 'connectionString' of 'AzureBlobStorage1'"
		},
		"Azure_devopssqlsrv_connectionString": {
			"type": "secureString",
			"metadata": "Secure string for 'connectionString' of 'Azure_devopssqlsrv'"
		},
		"FileServer1_password": {
			"type": "secureString",
			"metadata": "Secure string for 'password' of 'FileServer1'"
		},
		"UacDevopsBlobStorage_connectionString": {
			"type": "secureString",
			"metadata": "Secure string for 'connectionString' of 'UacDevopsBlobStorage'"
		},
		"UacRestService2_password": {
			"type": "secureString",
			"metadata": "Secure string for 'password' of 'UacRestService2'"
		},
		"devopsuac2_connectionString": {
			"type": "secureString",
			"metadata": "Secure string for 'connectionString' of 'devopsuac2'"
		},
		"FileServer1_properties_typeProperties_host": {
			"type": "string",
			"defaultValue": "C:\\Users\\fotis.drakos\\Desktop"
		},
		"FileServer1_properties_typeProperties_userId": {
			"type": "string",
			"defaultValue": "fotis.drakos"
		},
		"UacRestService2_properties_typeProperties_url": {
			"type": "string",
			"defaultValue": "http://10.100.10.6:8080"
		},
		"UacRestService2_properties_typeProperties_userName": {
			"type": "string",
			"defaultValue": "ops.admin"
		},
		"containerUri": {
			"type": "string",
			"metadata": "URI to storage account containing linked ARM templates"
		},
		"containerSasToken": {
			"type": "string",
			"metadata": "Sas token to storage account containing linked ARM templates"
		}
	},
	"variables": {
		"factoryId": "[concat('Microsoft.DataFactory/factories/', parameters('factoryName'))]"
	},
	"resources": [
		{
			"name": "ArmTemplate_0",
			"type": "Microsoft.Resources/deployments",
			"apiVersion": "2018-02-01",
			"properties": {
				"mode": "incremental",
				"templateLink": {
					"uri": "[concat(parameters('containerUri'), '/ArmTemplate_0.json', parameters('containerSasToken'))]",
					"contentVersion": "1.0.0.0"
				},
				"parameters": {
					"factoryName": {
						"value": "[parameters('factoryName')]"
					},
					"AzureBlobStorage1_connectionString": {
						"value": "[parameters('AzureBlobStorage1_connectionString')]"
					},
					"Azure_devopssqlsrv_connectionString": {
						"value": "[parameters('Azure_devopssqlsrv_connectionString')]"
					},
					"FileServer1_password": {
						"value": "[parameters('FileServer1_password')]"
					},
					"UacDevopsBlobStorage_connectionString": {
						"value": "[parameters('UacDevopsBlobStorage_connectionString')]"
					},
					"UacRestService2_password": {
						"value": "[parameters('UacRestService2_password')]"
					},
					"devopsuac2_connectionString": {
						"value": "[parameters('devopsuac2_connectionString')]"
					},
					"FileServer1_properties_typeProperties_host": {
						"value": "[parameters('FileServer1_properties_typeProperties_host')]"
					},
					"FileServer1_properties_typeProperties_userId": {
						"value": "[parameters('FileServer1_properties_typeProperties_userId')]"
					},
					"UacRestService2_properties_typeProperties_url": {
						"value": "[parameters('UacRestService2_properties_typeProperties_url')]"
					},
					"UacRestService2_properties_typeProperties_userName": {
						"value": "[parameters('UacRestService2_properties_typeProperties_userName')]"
					}
				}
			},
			"dependsOn": []
		}
	]
}